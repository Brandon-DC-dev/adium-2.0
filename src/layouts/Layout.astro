---
import "@fontsource-variable/onest";
import { ViewTransitions } from "astro:transitions";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Vanta Globe</title>

    <!-- Scripts necesarios -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r134/three.min.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.globe.min.js" defer></script>

    <style>
      html, body {
        margin: 0;
        padding: 0;
        height: 100%;
      }
    </style>
  </head>

  <body class="min-h-screen text-black overflow-x-hidden relative">

    <ViewTransitions />

    <!-- FONDO ANIMADO -->
    <div id="vanta-bg" class="fixed inset-0 -z-10"></div>

    <!-- HEADER -->
    <Header />

    <!-- CONTENIDO -->
    <main class="relative z-20 pt-24">
      <slot />
    </main>

    <!-- FOOTER (AQUÍ DEBE IR) -->
    <Footer />

    <!-- Inicialización de VANTA -->
    <script is:inline>
      window.addEventListener("load", () => {
        const tryInitVanta = () => {
          if (window.VANTA && window.VANTA.GLOBE) {
            window.VANTA.GLOBE({
              el: "#vanta-bg",
              mouseControls: true,
              touchControls: true,
              gyroControls: false,
              minHeight: 200.0,
              minWidth: 200.0,
              scale: 1.0,
              scaleMobile: 1.0,
              color: 0x3feaff,
              color2: 0xfc0404,
              size: 2.0,
              backgroundColor: 0xffffff
            });
          } else {
            setTimeout(tryInitVanta, 200);
          }
        };

        tryInitVanta();
      });
    </script>

  </body>
</html>
